<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/com.thatcsharpguy.myissues" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
        android:id="@+id/IssueListMilestone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="1dp"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="Detail"
        android:paddingBottom="2dp"
        style="@style/SecondaryText" />
      <TextView
        android:id="@+id/IssueListTitle"
        android:layout_width="match_parent"
        android:ellipsize="marquee"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:textColor="#000000"
        android:layout_below="@id/IssueListMilestone"
        android:textSize="22sp"
        tools:text="Really long text, shoudl wrap around?"
        android:paddingBottom="5dp"
        style="@style/PrimaryText" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IssueListTitle">
        <View
          android:id="@+id/IssueColorLabel1"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="10dp"
          android:background="#DDDDDD"
          android:scaleType="centerInside" />
        <View
          android:id="@+id/IssueColorLabel2"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="10dp"
          android:background="#CCCCCC"
          android:scaleType="centerInside"
          android:layout_toRightOf="@id/IssueColorLabel1" />
        <View
          android:id="@+id/IssueColorLabel3"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="10dp"
          android:background="#BBBBBB"
          android:scaleType="centerInside"
          android:layout_toRightOf="@id/IssueColorLabel2" />
        <View
          android:id="@+id/IssueColorLabel4"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="10dp"
          android:background="#AAAAAA"
          android:scaleType="centerInside"
          android:layout_toRightOf="@id/IssueColorLabel3" />
        <View
          android:id="@+id/IssueColorLabel5"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="10dp"
          android:background="#999999"
          android:scaleType="centerInside"
          android:layout_toRightOf="@id/IssueColorLabel4" />
      </LinearLayout>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>