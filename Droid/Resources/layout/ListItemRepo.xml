<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent">
  <View android:id="@+id/RepoListColor" android:layout_width="15dp" android:layout_height="fill_parent" android:background="#DDDDDD" />
  <TextView android:id="@+id/RepoListLanguage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" android:maxLines="1" android:textStyle="bold" android:paddingEnd="4dp" android:textColor="#000000" android:textSize="12sp" tools:text="Detail" style="@style/SecondaryText" />
  <RelativeLayout android:id="@+id/RepoListTextLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@id/RepoListLanguage" android:layout_toEndOf="@id/RepoListColor">
    <TextView android:id="@+id/RepoListOwner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:maxLines="1" android:paddingEnd="4dp" android:textColor="#000000" android:textSize="12sp" tools:text="Owner" style="@style/SecondaryText" />
    <TextView android:id="@+id/RepoListTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:textSize="19sp" tools:text="Title" android:layout_below="@+id/RepoListOwner" android:typeface="monospace" style="@style/PrimaryText" />
    <TextView android:id="@+id/RepoListDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/RepoListTitle" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginTop="2dp" android:ellipsize="end" android:maxLines="3" android:textSize="15sp" tools:text="Subtitle" android:lines="1" style="@style/SecondaryText" />
  </RelativeLayout>
</RelativeLayout>